{
  "extends"        : "./tsconfig.json",
  "compilerOptions": {
    "inlineSourceMap": false,
    "inlineSources"  : false,
    "jsx"            : "react",
    "lib"            : ["es5", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext", "dom"],
    "module"         : "esnext",
    "sourceMap"      : false,
    "target"         : "esnext"
  },
  "include"        : [
    "**/*.tsx",
    "**/*.ts",
    "**/*.jsx",
    "**/*.js"
  ],
  "exclude"        : [
    "**/node_modules",
    "**/.*"
  ]
}
