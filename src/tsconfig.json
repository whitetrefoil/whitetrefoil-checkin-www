{
  "extends"        : "../tsconfig.json",
  "compilerOptions": {
    "jsx"   : "react-jsx",
    "lib"   : [
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "esnext",
    "target": "esnext"
  },
  "include"        : [
    "../declarations/**/*.d.ts",
    "**/*.tsx",
    "**/*.ts"
  ],
  "exclude"        : [
    "**/*.spec.tsx",
    "**/*.spec.ts"
  ]
}
